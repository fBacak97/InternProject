<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_no_search"
            layout="@layout/toolbar_no_search" />

        <android.support.v4.view.ViewPager
            android:id="@+id/productSlider"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:background="#F0F4C3"
            android:layout_below="@+id/toolbar_no_search"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/product_discountText"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignTop="@+id/productSlider"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:gravity="center"
            android:rotation="-45"
            android:text="%45"
            android:textColor="#000000"
            android:textSize="25sp">

        </TextView>

        <TextView
            android:id="@+id/product_priceText"
            android:layout_width="wrap_content"
            android:layout_height="55sp"
            android:layout_alignBottom="@+id/productSlider"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:rotation="-45"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/buttonHolder"
            android:layout_width="250sp"
            android:layout_height="135sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/productSlider"
            android:background="#CDDC39" />

        <Button
            android:id="@+id/productFavButton"
            android:layout_width="180sp"
            android:layout_height="35sp"
            android:background="#8BC34A"
            android:text="Add to Wishlist"
            android:layout_alignLeft="@+id/product_infoText"
            android:layout_alignStart="@+id/product_infoText"
            android:layout_alignBottom="@+id/buttonHolder"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp" />

        <Button
            android:id="@+id/productBuyButton"
            android:layout_width="180sp"
            android:layout_height="35sp"
            android:background="#8BC34A"
            android:text="Add to Cart"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/buttonHolder"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            />

        <TextView
            android:id="@+id/product_infoText"
            android:layout_width="270sp"
            android:layout_height="50sp"
            android:text="Information"
            android:textSize="20sp"
            android:layout_above="@+id/productBuyButton"
            android:gravity="center_vertical|center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.TabLayout
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="0dp"
            android:id="@+id/swipeDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="center"
            app:tabBackground="@drawable/swipe_dot_selector"
            android:layout_below="@+id/productSlider" />

    </RelativeLayout>

    <ListView
        android:layout_width="205sp"
        android:layout_height="match_parent"
        android:id="@+id/secondDrawerListView"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ffff"
        android:elevation="16sp"/>

</android.support.v4.widget.DrawerLayout>