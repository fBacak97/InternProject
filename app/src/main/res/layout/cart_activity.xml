<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_no_search"
        layout="@layout/toolbar_no_search" />

    <ListView
        android:id="@+id/cartList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_no_search"
        android:layout_above="@+id/sumAndProceed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/sumAndProceed"
        android:background="@color/limegreen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/darkgreen"
            android:id="@+id/view">

        </View>

        <TextView
            android:id="@+id/fix"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Subtotal: "
            android:textColor="@color/black"
            android:textSize="26sp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view" />

        <TextView
            android:id="@+id/itemPriceSum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/fix"
            android:layout_toRightOf="@+id/fix"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_below="@+id/view" />

        <Button
            android:id="@+id/button"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Proceed "
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:drawableRight="@drawable/forward"
            />

    </RelativeLayout>

</RelativeLayout>